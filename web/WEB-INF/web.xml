    <!--REST-->
    <servlet>
        <servlet-name>ManagementController</servlet-name>
        <servlet-class>vn.mobileid.id.general.api.ManagementController</servlet-class>
        <init-param>
            <param-name>documentPattern</param-name>
            <param-value>^/fps/v1/(documents|synchronize)[/]{0,1}(base64|pre){0,1}[0-9]*[/]{0,1}(sign|details|images|verification|base64|hash){0,1}[/]{0,1}[0-9]*[/]{0,1}(base64){0,1}$</param-value>
        </init-param>
        <init-param>
            <param-name>fieldPattern</param-name>
            <param-value>^/fps/v1/documents/[0-9]+/(fields|initial|qrcode-qrypto).*$</param-value>
        </init-param>
        <init-param>
            <param-name>authorizePattern</param-name>
            <param-value>^/fps/v1/(authenticate|tokens|info)$</param-value>
        </init-param>
        <init-param>
            <param-name>FMSPattern</param-name>
            <param-value>^/fps/(upload|delete|download)[/]{0,1}.*$</param-value>
        </init-param>
    </servlet>
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>vn.mobileid.id.general.api.CORSFilter</filter-class>
    </filter>
    <!--    <servlet>
        <servlet-name>documentController</servlet-name>
        <servlet-class>vn.mobileid.id.FPS.controller.DocumentController</servlet-class>
    </servlet>-->
    <servlet>
        <servlet-name>resourcesLoad</servlet-name>
        <servlet-class>vn.mobileid.id.general.Resources</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>ManagementController</servlet-name>
        <url-pattern>/*</url-pattern>       
    </servlet-mapping>
    <!--END REST-->
